{
  "name": "python-ml",
  "description": "Python ML and data science development with pip, pyenv, and virtualenvs",
  "agent": "claude",
  "profiles": ["host-tools"],
  "capabilities": {
    "network": true,
    "exec": true,
    "extraReadPaths": [
      "/opt/homebrew",
      "~/.pyenv",
      "~/.local/share/virtualenvs",
      "~/.conda"
    ],
    "extraWritePaths": []
  },
  "env": {
    "PYTHONDONTWRITEBYTECODE": "1"
  },
  "worktreePrefix": "ai-python",
  "startPoint": "main"
}
